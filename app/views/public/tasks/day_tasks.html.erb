<h1><%= l @today, format: :date %>noyotei</h1>
<table class="table">
  <thead>
    <tr>
      <th>time</th>
      <th>title</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @tasks.each do |task| %>
      <tr>
        <td><%= l task.start_time, format: :time %></td>
        <td><%= task.task_title %></td>
        <td><%= link_to "show", task_path(task), class: "btn btn-outline-primary" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

 <% if user_signed_in? %>
  <div class="search_form">
    <%= form_with url: search_path, local: true, method: :get do |f| %>
      <%= f.text_field :task %>
   <% if current_page?(controller: 'users') %>
    <%= f.select :range, ( ['user','date']) %>
   <% else %>
      <%= f.select :range, ( ['task','date']) %>
   <% end %>
      <%= f.submit "検索", class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>